        "prom-client": "11.5.3",
        "swagger-ui-express": "4.1.3",
        "winston": "3.2.1"
    },
    "devDependencies": {
        "chai": "4.2.0",
        "chai-http": "4.3.0",
        "mocha": "7.0.0"
