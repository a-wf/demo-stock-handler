{
  "name": "abc-stock-handler",
  "version": "0.0.0",
  "description": "a stock handler for products a,b and c",
  "main": "app.js",
  "license": "Unlicense",
  "scripts": {
    "lint": "eslint '*/**/*.{js,ts}' --quiet",
    "lint-fix": "eslint '*/**/*.{js,ts}' --quiet --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.{js,ts}' --write",
    "start": "NODE_ENV=production node build/src/app.js",
    "dev": "NODE_ENV=development nodemon build/src/app.js",
    "test": "NODE_ENV=test  mocha --exit $(find src/tests -name '*.test.js')",
    "test-coverage": "NODE_ENV=test nyc --check-coverage --lines 80  $(npm test)"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --quiet"
    ]
  },
  "devDependencies": {
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {}
}
