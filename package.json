{
  "name": "products-depot-handler",
  "version": "4.0.0",
  "description": "a stock handler for products",
  "main": "index.js",
  "license": "Unlicense",
  "scripts": {
    "lint": "tslint --project . --quiet; eslint --quiet",
    "lint-fix": "tslint --project . --quiet --fix; eslint --quiet --fix",
    "prettier": "prettier --config .prettierrc 'src/**/*.{ts, js}' --write",
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "NODE_ENV=development ts-node src/index.ts",
    "test": "NODE_ENV=test jest --forceExit --coverage --verbose",
    "build-tsc": "tsc -p .",
    "build": "rm -rf dist; yarn build-tsc; cp package.json dist/package.json; yarn build-docker; yarn save-docker",
    "build-docker": "docker build . -t docker_products_depot_handler:4.0.0",
    "save-docker": "rm -f docker_products_depot_handler_4.0.0.img; docker save docker_products_depot_handler:4.0.0 > docker_products_depot_handler_4.0.0.img",
    "knex:migration": "knex --knexfile ./src/database/postgresql/knexfile.js migrate:latest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --quiet"
    ],
    "*.ts": [
      "tslint --quiet"
    ]
  },
  "jest": {
    "rootDir": "./"
  },
  "dependencies": {
    "@hapi/joi": "17.1.1",
    "apollo-server-express": "2.16.1",
    "bcryptjs": "2.4.3",
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-basic-auth": "1.2.0",
    "express-openapi-validator": "3.16.8",
    "express-prom-bundle": "6.1.0",
    "graphql": "15.3.0",
    "jsonwebtoken": "8.5.1",
    "knex": "0.21.4",
    "mongoose": "5.9.28",
    "objection": "2.2.2",
    "pg": "8.3.0",
    "prom-client": "12.0.0",
    "rate-limiter-flexible": "2.1.10",
    "swagger-ui-express": "4.1.4",
    "winston": "3.3.3",
    "yamljs": "0.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/graphql": "14.5.0",
    "@types/hapi__joi": "17.1.4",
    "@types/jsonwebtoken": "8.5.0",
    "@types/knex": "0.16.1",
    "@types/mongoose": "5.7.36",
    "@types/multer": "1.4.4",
    "@types/node": "14.0.27",
    "@types/randomstring": "1.1.6",
    "@types/supertest": "2.0.10",
    "@types/swagger-ui-express": "4.1.2",
    "@types/yamljs": "0.2.31",
    "@typescript-eslint/eslint-plugin": "3.9.0",
    "@typescript-eslint/parser": "3.9.0",
    "eslint": "7.6.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "jest": "26.4.0",
    "mock-require": "3.0.3",
    "mongodb-memory-server": "6.6.3",
    "nodemon": "2.0.4",
    "prettier": "2.0.5",
    "randomstring": "1.1.5",
    "supertest": "4.0.2",
    "ts-jest": "26.2.0",
    "ts-node": "8.10.2",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "3.9.7"
  }
}
