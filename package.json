{
  "name": "products-depot-handler",
  "version": "1.0.0",
  "description": "a stock handler for products",
  "main": "index.js",
  "license": "Unlicense",
  "scripts": {
    "lint": "eslint '*/**/*.js' --quiet",
    "lint-fix": "eslint '*/**/*.js' --quiet --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*js' --write",
    "start": "NODE_ENV=production node src/index.js",
    "dev": "NODE_ENV=development nodemon src/index.js",
    "test": "jest --coverage",
    "build": "mkdir -p build; ncp src/ build/; cp package.json build/; yarn build-docker; yarn save-docker",
    "build-docker": "docker build . -t docker_products_depot_handler:1.0.0",
    "save-docker": " docker save docker_products_depot_handler:1.0.0 > docker_products_depot_handler_1.0.0.img"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --quiet"
    ]
  },
  "jest": {
    "rootDir": "./"
  },
  "dependencies": {
    "@hapi/joi": "17.1.1",
    "apollo-server-express": "^2.16.1",
    "basic-auth": "^2.0.1",
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-basic-auth": "1.2.0",
    "express-openapi-validator": "3.16.8",
    "express-prom-bundle": "6.1.0",
    "graphql-tag": "^2.11.0",
    "helmet": "^4.0.0",
    "mongoose": "5.9.28",
    "prom-client": "12.0.0",
    "rate-limiter-flexible": "2.1.10",
    "swagger-ui-express": "4.1.4",
    "tsscmp": "^1.0.6",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "eslint": "7.6.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "jest": "^26.2.2",
    "mock-require": "^3.0.3",
    "mongodb-memory-server": "^6.6.3",
    "nodemon": "2.0.4",
    "prettier": "2.0.5",
    "supertest": "^4.0.2"
  }
}
